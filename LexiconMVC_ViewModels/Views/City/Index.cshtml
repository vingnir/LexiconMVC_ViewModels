@model IEnumerable<LexiconMVC_ViewModels.Models.City>

@{
    ViewData["Title"] = "Cities";
}

<h1>Cities</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CityName
                </td>
            <td>
                <a asp-action="Delete" asp-route-CityName="@item.CityName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
