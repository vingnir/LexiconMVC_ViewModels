@model IEnumerable<LexiconMVC_ViewModels.Models.Language>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LanguageName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageName)
            </td>
            
            <td>
                <a asp-action="Delete" asp-route-LanguageId="@item.LanguageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
